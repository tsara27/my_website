---
layout: none
---

{% assign posts = site.posts %}
[
  {% for post in posts %}
    {
      "post_title": "{{ post.title }}",
      "post_path": "{{ post.url }}",
      "post_date": "{{ post.date | date: '%b %-d, %Y' }}",
      "post_description": "{{ post.description }}"
    }{% unless forloop.last %},
  {% endunless %}
  {% endfor %}
]
